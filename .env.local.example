# ==============================================================================
# Environment Variables for Pastoral de la Salud Website
# ==============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ==============================================================================
# Google Sheets Integration (Phase 7)
# ==============================================================================
# Create a service account in Google Cloud Console:
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing
# 3. Enable Google Sheets API
# 4. Create a service account with Sheets access
# 5. Download the JSON key file
# 6. Share your spreadsheet with the service account email

# The service account email (from your JSON key file)
GOOGLE_SHEETS_CLIENT_EMAIL="pastoral-salud@your-project.iam.gserviceaccount.com"

# The private key from your JSON key file (include the full key with \n for newlines)
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# The ID of your Google Spreadsheet (from the URL)
# Example URL: https://docs.google.com/spreadsheets/d/1abc123xyz/edit
# The ID would be: 1abc123xyz
GOOGLE_SHEETS_SPREADSHEET_ID="your-spreadsheet-id"

# ==============================================================================
# Sanity CMS (Phase 8 - Optional)
# ==============================================================================
# Create a project at https://www.sanity.io/

# Your Sanity project ID
NEXT_PUBLIC_SANITY_PROJECT_ID="your-sanity-project-id"

# Your Sanity dataset (usually "production")
NEXT_PUBLIC_SANITY_DATASET="production"

# Sanity API token (for write operations)
SANITY_API_TOKEN="your-sanity-api-token"

# ==============================================================================
# Wompi Payment Gateway (Phase 9 - Optional)
# ==============================================================================
# Create a merchant account at https://wompi.co/

# Your Wompi public key (safe to expose to client)
NEXT_PUBLIC_WOMPI_PUBLIC_KEY="pub_test_your_public_key"

# Your Wompi private key (server-side only, NEVER expose to client)
WOMPI_PRIVATE_KEY="prv_test_your_private_key"

# Your Wompi events secret (for webhook verification)
WOMPI_EVENTS_SECRET="your-events-secret"

# Environment: "sandbox" for testing, "production" for live
WOMPI_ENVIRONMENT="sandbox"

# ==============================================================================
# NextAuth.js (Phase 10 - Optional)
# ==============================================================================
# For virtual classroom authentication

# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret"

# Your site URL
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ==============================================================================
# Email Notifications (Optional)
# ==============================================================================
# For sending confirmation emails on form submissions

# SMTP settings
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Notification recipient
NOTIFICATION_EMAIL="pastoral.salud@diocesisarmenia.org"

# ==============================================================================
# Analytics (Optional)
# ==============================================================================

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# ==============================================================================
# Development
# ==============================================================================

# Set to "development" or "production"
NODE_ENV="development"
